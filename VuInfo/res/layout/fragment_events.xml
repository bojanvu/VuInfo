<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/orange"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_web_vukovar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="@string/web_page_name"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/panorama_vukovar" />

        <Button
            android:id="@+id/button_web_panorama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_web_vukovar"
            android:layout_alignTop="@+id/imageView2"
            android:text="@string/web_page_name"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="22dp"
            android:src="@drawable/e_vukovar" />

        <Button
            android:id="@+id/button_web_e_vukovar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/button_web_panorama"
            android:layout_marginBottom="19dp"
            android:text="@string/web_page_name"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_hr_radio_vu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/button_web_e_vukovar"
            android:text="@string/web_page_name"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_web_radio_dunav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignRight="@+id/button_hr_radio_vu"
            android:text="@string/web_page_name"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/button_web_vukovar"
            android:scaleType="fitXY"
            android:src="@drawable/radio_dunav" />

        <TextView
            android:id="@+id/events_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="@string/events_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/events_title"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="31dp"
            android:scaleType="fitXY"
            android:src="@drawable/vukovar_web_pictures" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@+id/button_web_vukovar"
            android:scaleType="fitXY"
            android:src="@drawable/hr_radio_vukovar" />

    </RelativeLayout>

</ScrollView>