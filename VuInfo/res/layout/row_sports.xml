<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="64dp" >

    <ImageView
        android:id="@+id/sports_icon_imageview"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/sports_row_textview"
        android:layout_width="97dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/sports_icon_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sports_icon_imageview"
        android:layout_marginLeft="96dp"
        android:gravity="center_vertical"
        android:text="@string/sports_row_textview"
        android:textColor="#336699"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/sports_icon_arrow_right"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sports_row_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp"
        android:src="@drawable/ic_action_arrow_right" />

</RelativeLayout>